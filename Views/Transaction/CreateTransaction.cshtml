@model TestWebApp.Models.Transaction

@{
    ViewData["Title"] = "Создание Транзакции";
}

<h1>Создание Транзакции</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTransactionDB">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Номер транзакции</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerId" class="control-label">Номер счета</label>
                <input asp-for="GamerId" class="form-control" />
                <span asp-validation-for="GamerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label">Сумма</label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOperation" class="control-label">Тип транзакции</label><br>
                @Html.DropDownList("TypeOperation", Html.GetEnumSelectList(typeof(Transaction.EnumTypeOperation)))
                <span asp-validation-for="TypeOperation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RedirectHomePage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
