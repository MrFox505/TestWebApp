@model TestWebApp.Models.Bet

@{
    ViewData["Title"] = "Изменение Ставки";
}

<h1>Изменение Ставки</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GamerId" class="control-label"></label>
                <select asp-for="GamerId" class="form-control" asp-items="ViewBag.GamerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateBet" class="control-label"></label>
                <input asp-for="DateBet" class="form-control" />
                <span asp-validation-for="DateBet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Win" class="control-label"></label>
                <input asp-for="Win" class="form-control" />
                <span asp-validation-for="Win" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalculationDate" class="control-label"></label>
                <input asp-for="CalculationDate" class="form-control" />
                <span asp-validation-for="CalculationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RedirectHomePage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
