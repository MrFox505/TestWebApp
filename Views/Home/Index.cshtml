@using TestWebApp
@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <a asp-action="CreateGamer" asp-controller="Home">Создать</a>
    <tr><th>ID</th><th>ФИО</th><th>Баланс</th><th>Дата регистрации</th><th>Статус</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FullName</td>
            <td>@item.Balance</td>
            <td>@item.RegistrationDate</td>
            <td>@item.Status</td>

            <td>
                <a asp-action="EditGamer" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="DeleteGamerDB" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
